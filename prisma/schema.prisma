generator doctor {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctor {
  id        String    @id
  name      String
  crm       String
  password  String
  createdAt DateTime
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?

  schedules MedicalSchedule[]

  @@map("doctors")
}

model SeedersHistory {
  id         String   @id
  name       String
  executedAt DateTime

  @@map("seeders_histories")
}

model MedicalSchedule {
  id           String          @id
  startDate    DateTime
  endDate      DateTime
  doctorId     String
  doctorName   String
  doctorCrm    String
  createdAt    DateTime
  updatedAt    DateTime?       @updatedAt
  deletedAt    DateTime?

  doctor       Doctor          @relation(fields: [doctorId], references: [id])

  @@map("medical_schedules")
}
